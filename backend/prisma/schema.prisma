generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Aadhaar {
  id          Int      @id @default(autoincrement())
  aadhaarNo   String   @unique
  fullName    String
  phoneNumber String   @unique
  panCard     PanCard?
}

model PanCard {
  id          Int      @id @default(autoincrement())
  panNo       String   @unique
  holderName  String
  dob         String
  aadhaarId   Int      @unique
  aadhaar     Aadhaar  @relation(fields: [aadhaarId], references: [id])
}
